{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            {{ form_start(form, {'action' : path('user_edit', {'id' : user.id})}) }}
                <div class="form-group">
                    {{ form_row(form.email) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.username) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.password) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.roles) }}
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success">Modifier mon compte</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
